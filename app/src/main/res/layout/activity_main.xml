<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mohamedisoukrane.myappportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodgree Apps!"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popular Movies"
        android:id="@+id/popular_movies"
        android:layout_below="@+id/title"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:background="@color/colorAccent"
        android:layout_alignRight="@+id/title"
        android:layout_alignEnd="@+id/title"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title"
        android:onClick="sendMessage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock Hawk"
        android:id="@+id/stock_hawk"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:background="@color/colorAccent"
        android:layout_below="@+id/popular_movies"
        android:layout_alignLeft="@+id/popular_movies"
        android:layout_alignStart="@+id/popular_movies"
        android:layout_alignRight="@+id/popular_movies"
        android:layout_alignEnd="@+id/popular_movies"
        android:onClick="sendMessage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build it Bigger"
        android:id="@+id/button2"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:background="@color/colorAccent"
        android:layout_below="@+id/stock_hawk"
        android:layout_alignLeft="@+id/stock_hawk"
        android:layout_alignStart="@+id/stock_hawk"
        android:layout_alignRight="@+id/stock_hawk"
        android:layout_alignEnd="@+id/stock_hawk"
        android:onClick="sendMessage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Your App Material"
        android:id="@+id/button3"
        android:textColor="#fff"
        android:background="@color/colorAccent"
        android:layout_below="@+id/button2"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:onClick="sendMessage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Ubiquitous"
        android:id="@+id/button4"
        android:textColor="#fff"
        android:background="@color/colorAccent"
        android:layout_below="@+id/button3"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:onClick="sendMessage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capstone"
        android:id="@+id/button5"
        android:textColor="#fff"
        android:background="@color/colorAccent"
        android:layout_below="@+id/button4"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4"
        android:onClick="sendMessage" />
</RelativeLayout>
